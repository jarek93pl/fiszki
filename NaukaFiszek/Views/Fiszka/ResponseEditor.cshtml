@{
    Layout = null;
}
@model DTO.Models.FicheResponse


<div style="position: absolute; left: 50%;">
    <div style="position: relative; left: -50%;">

        <div class="form-horizontal WindowAllert  col-md-12" id="ficheResponsesEdit" hidden="hidden">
            <h4>Dodawanie odpowiedzi</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-6", id = "FicheNameEditor" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TypePrompt, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-7">
                    @Html.EnumDropDownListFor(model => model.TypePrompt, new { @class = "form-control col-md-6", id = "TypePromptResponseEditor" })
                </div>
            </div>

            @Html.HiddenFor(model => model.IdFile, new { id = "IdFileResponseEditor" })
            @Html.HiddenFor(model => model.Id, new { @class = "ClassFicheEditor" })
            <div class="form-group" id="PrompContainerResponse" hidden="hidden">
                <div id="AddFileDivResponse">
                    <input type="file" value="Wyślij" class="btn" id="PromptFileResponse" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsCorect, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.IsCorect, new { @class = "form-control col-md-4", id = "IsCorectEditor" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Zatwierdź" class="btn col-md-4" id="ResponseEditorAdd" />
                    <input type="submit" value="Zatwierdź" class="btn col-md-4" id="ResponseEditorEdit" />
                    <input type="submit" value="Ukryj" class="btn col-md-4" id="ResponseEditorHide" />
                </div>
            </div>
        </div>
    </div>
</div>
