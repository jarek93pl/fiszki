@{
    Layout = null;
}
@model DTO.FicheResponse


<div style="position: absolute; left: 50%;">
    <div style="position: relative; left: -50%; border:  10px; border-color:blue;">

        <div class="form-horizontal" id="ficheResponsesEdit" hidden="hidden">
            <h4>FicheResponse</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "FicheNameEditor" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdFile, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.TypePrompt, new { @class = "form-control", id = "TypePromptResponseEditor" })
                </div>
            </div>

            @Html.HiddenFor(model => model.IdFile, new { id = "IdFileResponseEditor" })
            @Html.HiddenFor(model => model.Id, new { @class = "ClassFicheEditor" })
            <div class="form-group" id="PrompContainerResponse" hidden="hidden">
                <div class="col-md-offset-2 col-md-10" id="AddFileDivResponse">
                    <input type="file" value="Wyślij" class="btn btn-default" id="PromptFileResponse" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsCorect, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IsCorect, new { @class = "form-control", id = "IsCorectEditor" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" id="ResponseEditorAdd" />
                    <input type="submit" value="Save" class="btn btn-default" id="ResponseEditorEdit" />
                    <input type="submit" value="Ukryj" class="btn btn-default" id="ResponseEditorHide" />
                </div>
            </div>
        </div>
    </div>
</div>
